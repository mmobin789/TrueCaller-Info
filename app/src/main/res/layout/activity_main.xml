<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.magicbio.truename.activities.MainActivity">

    <LinearLayout
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:background="#E4E5E7"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#FFFFFF"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/logoView"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/logo1" />

            <Button
                android:id="@+id/btnMenu1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/menu1"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/black" />

            <androidx.appcompat.widget.SearchView
                android:id="@+id/searchView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layoutDirection="rtl"
                app:iconifiedByDefault="true"
                app:queryHint="search by name or number" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/belowPanel"
        android:layout_below="@id/topPanel"
        android:orientation="horizontal">

    </LinearLayout>


    <LinearLayout
        android:id="@+id/belowPanel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/v1"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">

                <View
                    android:id="@+id/l1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="top"
                    android:layout_marginBottom="2dp"
                    android:background="#0DBA82" />

                <Button
                    android:id="@+id/btnMessages"
                    android:layout_width="50dp"
                    android:layout_height="37dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/messege_btn_unclick1" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/v2"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:clickable="true">

                <View
                    android:id="@+id/l2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="2dp"
                    android:background="#0DBA82" />

                <Button
                    android:id="@+id/btnCalls"
                    android:layout_width="30dp"
                    android:layout_height="37dp"

                    android:layout_centerInParent="true"
                    android:background="@drawable/call_btn_click1" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/v3"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:orientation="vertical">

                <View
                    android:id="@+id/l3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="top"
                    android:layout_marginBottom="2dp"
                    android:background="#0DBA82" />

                <Button
                    android:id="@+id/btnContacts"
                    android:layout_width="50dp"
                    android:layout_height="37dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/contact_unclick1" />
            </RelativeLayout>


        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
