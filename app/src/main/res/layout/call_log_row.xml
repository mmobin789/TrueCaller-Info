<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notification_row_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f2f2f2"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:baselineAligned="false"
        android:weightSum="6">

        <RelativeLayout
            android:id="@+id/main_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="0dp"
            android:layout_toRightOf="@+id/callp"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:gravity="center_vertical">

                <RelativeLayout
                    android:layout_width="85dp"
                    android:layout_height="80dp">

                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/logo1" />

                    <ImageView
                        android:id="@+id/callType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/recieve_call1" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0dp"
                    android:orientation="vertical"
                    android:paddingTop="0dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ahmed Bilal"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/true_icon"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="03066855423" />

                        <ImageView
                            android:id="@+id/sim"
                            android:layout_width="10dp"
                            android:layout_height="12dp"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/sim_1" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/txtDuration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="09:45" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/red_dott"
                            android:visibility="gone" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="on call"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:background="@color/white"
                android:visibility="gone">

                <Button
                    android:id="@+id/rec"
                    android:layout_width="70dp"
                    android:layout_height="65dp"
                    android:layout_weight="1"
                    android:background="@drawable/call_recording_btn"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btnLocation"
                    android:layout_width="70dp"
                    android:layout_height="65dp"
                    android:layout_weight="1"
                    android:background="@drawable/location_btn" />

                <Button
                    android:id="@+id/btnHistory"
                    android:layout_width="70dp"
                    android:layout_height="65dp"
                    android:layout_weight="1"
                    android:background="@drawable/history_btn1" />

                <Button
                    android:id="@+id/btnwa"
                    android:layout_width="70dp"
                    android:layout_height="65dp"
                    android:layout_weight="1"
                    android:background="@drawable/whats_app_btn1" />

                <Button
                    android:id="@+id/btnSms"
                    android:layout_width="70dp"
                    android:layout_height="65dp"
                    android:layout_weight="1"
                    android:background="@drawable/sms_btn1" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/callp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/btnCall"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:background="@drawable/call_btn" />
        </LinearLayout>
    </LinearLayout>

    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        ads:adSize="BANNER"
        ads:adUnitId="@string/test_banner_id"
        tools:visibility="visible" />

</LinearLayout>