<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#ffffff" />
                    <stroke android:width="1dip" android:color="#20A2DC" />
                    <corners android:radius="10dp" />

                    <padding android:bottom="3dp" android:left="15dp" android:right="3dp" android:top="3dp" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="right|center" android:src="@drawable/drop_down" />
            </item>
            <item>
                <bitmap android:gravity="left|center" android:src="@drawable/location_pin" />
            </item>
        </layer-list>
    </item>

</selector>